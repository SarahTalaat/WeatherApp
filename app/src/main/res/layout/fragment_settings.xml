<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card for Location -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonGPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS" />

                    <RadioButton
                        android:id="@+id/radioButtonMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Language -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroupLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English" />

                    <RadioButton
                        android:id="@+id/radioButtonArabic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arabic" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Temperature -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroupTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonCelsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celsius" />

                    <RadioButton
                        android:id="@+id/radioButtonKelvin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelvin" />

                    <RadioButton
                        android:id="@+id/radioButtonFahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fahrenheit" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Wind Speed -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind Speed"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroupWindSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonMeterSec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meter/Sec" />

                    <RadioButton
                        android:id="@+id/radioButtonMileHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mile/Hour" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Notification -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroupNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonEnable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable" />

                    <RadioButton
                        android:id="@+id/radioButtonDisable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disable" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
