<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        tools:context=".CurrentWeather.CurrentWeatherView.CurrentWeatherFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2_city"
            android:layout_width="328dp"
            android:layout_height="510dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/blue1"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_days_city">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_visibility_value_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_visibility_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_visibility_city" />

                <TextView
                    android:id="@+id/tv_visibility_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Visibility :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_cloud_city"
                    app:layout_constraintTop_toTopOf="@+id/img_visibility_city" />

                <TextView
                    android:id="@+id/tv_cloud_value_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_cloud_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cloud_city" />

                <TextView
                    android:id="@+id/tv_cloud_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Cloud :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_wind_city"
                    app:layout_constraintTop_toTopOf="@+id/img_cloud_city" />

                <TextView
                    android:id="@+id/tv_wind_value_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_wind_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wind_city" />

                <TextView
                    android:id="@+id/tv_wind_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Wind :  "
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_humidity_city"
                    app:layout_constraintTop_toTopOf="@+id/img_wind_city" />

                <TextView
                    android:id="@+id/tv_humidity_value_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_humidity_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_humidity_city" />

                <TextView
                    android:id="@+id/tv_humidity_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Humidity :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_pressure_city"
                    app:layout_constraintTop_toTopOf="@+id/img_humidity_city" />

                <ImageView
                    android:id="@+id/img_pressure_city"
                    android:layout_width="72dp"
                    android:layout_height="71dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card2pressure" />

                <ImageView
                    android:id="@+id/img_humidity_city"
                    android:layout_width="72dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_pressure_city"
                    app:layout_constraintStart_toStartOf="@+id/img_pressure_city"
                    app:layout_constraintTop_toBottomOf="@+id/img_pressure_city"
                    app:srcCompat="@drawable/humidity" />

                <ImageView
                    android:id="@+id/img_wind_city"
                    android:layout_width="72dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_humidity_city"
                    app:layout_constraintStart_toStartOf="@+id/img_humidity_city"
                    app:layout_constraintTop_toBottomOf="@+id/img_humidity_city"
                    app:srcCompat="@drawable/card2wind" />

                <ImageView
                    android:id="@+id/img_cloud_city"
                    android:layout_width="72dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_wind_city"
                    app:layout_constraintStart_toStartOf="@+id/img_wind_city"
                    app:layout_constraintTop_toBottomOf="@+id/img_wind_city"
                    app:srcCompat="@drawable/image_04d" />

                <ImageView
                    android:id="@+id/img_visibility_city"
                    android:layout_width="72dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_cloud_city"
                    app:layout_constraintStart_toStartOf="@+id/img_cloud_city"
                    app:layout_constraintTop_toBottomOf="@+id/img_cloud_city"
                    app:srcCompat="@drawable/card2visibility" />

                <TextView
                    android:id="@+id/tv_pressure_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="5dp"
                    android:text="Pressure:"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/img_pressure_city"
                    app:layout_constraintTop_toTopOf="@+id/img_pressure_city" />

                <TextView
                    android:id="@+id/tv_pressure_value_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_pressure_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pressure_city" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_city"
            android:layout_width="328dp"
            android:layout_height="210dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/blue1"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Date_city">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_weatherState_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="30dp"
                    android:hint="Weather State"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_degreeOfTemprature_city"
                    android:layout_width="131dp"
                    android:layout_height="88dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:hint="Degree"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_weatherState_city" />

                <ImageView
                    android:id="@+id/img_weathertatus_city"
                    android:layout_width="153dp"
                    android:layout_height="128dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_degreeOfTemprature_city"
                    app:layout_constraintTop_toBottomOf="@+id/tv_weatherState_city"
                    app:srcCompat="@drawable/weather_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hours_city"
            android:layout_width="405dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_city" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_days_city"
            android:layout_width="419dp"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_hours_city" />

        <TextView
            android:id="@+id/tv_Country_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Country"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back" />

        <TextView
            android:id="@+id/tv_Date_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Date"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Country_city"
            app:layout_constraintHorizontal_bias="0.371"
            app:layout_constraintStart_toStartOf="@+id/tv_Country_city"
            app:layout_constraintTop_toBottomOf="@+id/tv_Country_city" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="75dp"
            android:layout_height="51dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/back"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>